@model project_3.Models.CustomerOrderViewModel

@using (@Html.BeginForm("Create", "FullOrder", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-row-reverse mb-2">
        <div class="d-flex col-md-5">
            @Html.DropDownListFor(m => m.StoreId, ViewBag.Stores_id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "col-md-9 form-control" })

            <span class="col-md-3 text-light">
                المخزن
            </span>
        </div>

        <div class="d-flex col-md-5">
            @Html.DropDownListFor(m => m.MeasureId, ViewBag.Measurements_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control col-md-9" })
            <span class="col-md-3 text-light">
                وحدة القياس
            </span>
        </div>
    </div>
    <div class="d-flex flex-row-reverse mb-2">
        <div class="d-flex col-md-5">
            @Html.TextBoxFor(model => model.OrderDate, new {@class = "col-md-9 form-control datepicker", type = "datetime-local"  })
            @*<input id="datepicker" type="datetime-local" name="التاريخ" class="col-md-9 form-control datepicker" />*@
            <span class="col-md-3 text-light">
                التاريخ
            </span>
        </div>

        <div class="d-flex col-md-5">
            @Html.DropDownListFor(m => m.WieghtId, ViewBag.Weight_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control col-md-9" })
            <span class="col-md-3 text-light">
                الوزن
            </span>
        </div>
    </div>
    <div class="d-flex flex-row-reverse mb-2">
        <div class="d-flex col-md-5">
            @Html.TextAreaFor(m => m.Notes, htmlAttributes: new { @class = "col-md-9 form-control", @rows = "1" })

            <span class="col-md-3 text-light">
                ملاحظات
            </span>
        </div>

        <div class="d-flex col-md-5">
            <input required type="number" name="quantity" class="col-md-9 form-control" />
            <span class="col-md-3 text-light">
                الكمية
            </span>
        </div>
    </div>

    <div class="d-flex flex-row-reverse mb-2">
        <div class="d-flex col-md-5">
            @Html.DropDownListFor(m => m.ProductId, ViewBag.Product_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control col-md-9" })
            <span class="col-md-3 text-light">
                اسم المنتج
            </span>
        </div>
        <div class="d-flex col-md-5">

            @Html.DropDownListFor(m => m.CarId, ViewBag.Car_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "col-md-9 form-control" })
            <span class="col-md-3 text-light">
                سائق العربيه
            </span>
        </div>
    </div>
    <div class="d-flex flex-row-reverse mb-2">
        <div class="d-flex col-md-5">

        </div>
        
        <div class="d-flex col-md-5">
            <input hidden name="CustomerId" value="@ViewBag.CustId" class="col-md-9 form-control" />
            
        </div>
    </div>
    <div class="d-flex flex-row-reverse ml-0">
        <div class="d-flex col-md-5">
            <button type="submit" class="col-md-9 text-light btn-success btn form-control">
                <span><i class="fas fa-user-plus fa-lg"></i></span>
                &nbsp;&nbsp;&nbsp;
                اضافه
            </button>
        </div>

        <div class="d-flex col-md-5">
            <a href="@Url.Action("Index", "orders")" class="col-md-9 text-light btn-primary btn form-control">
                <i class="fas fa-undo"></i>
                &nbsp;&nbsp;&nbsp;
                رجوع للقائمه
            </a>
        </div>
    </div>


}
