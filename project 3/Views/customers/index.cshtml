@model IEnumerable<project_3.Models.CustomerViewModel>

@{
    ViewBag.Title = "index";
}


@if (TempData["Msg"] != null)
{
    if (TempData["Color"].ToString() == "Green")
    {
        <div id="msg" style="text-align:center; background-color:lightgreen" class="col-md-5  rounded offset-3 p-2 text-success">
            <div class="col-md-3">

            </div>
            <h3>
                @TempData["Msg"]
            </h3>
        </div>
    }
    else if (TempData["Color"].ToString() == "Red")
    {
        <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
            <div class="col-md-3">

            </div>
            <h3>
                @TempData["Msg"]
            </h3>
        </div>
    }

}



@using (Html.BeginForm("Search", "Customers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="page-container mb-5">
        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 style='font-family:"BeInNormal"' class="text-light ">
                بيانات الوكلاء
            </h1>
        </div>
        <div class="d-flex flex-row-reverse mr-2">
            <h1 class="text-light">
                بحث
            </h1>
            <div class="col-md-2">
                <input type="text" class="form-control" name="Key" />
            </div>
            <div>
                <input type="submit" value="<<" class="bg-primary text-dark form-control">

            </div>


            <div class=" mr-auto rounded pt-2">

                <a class="btn btn-success form-control text-light" href="@Url.Action("Create", "Customers")">
                    <span><i class="fas fa-user-plus fa-lg"></i></span>
                    &nbsp;&nbsp;&nbsp;
                    اضافة وكيل جديد
                </a>

            </div>
        </div>



        <table class="text-center table table-hover border-bottom border-light border-5">
            <tr class=" text-light">
                <th>حذف</th>
                <th>تعديل</th>
                <th>بيانات</th>
                @*@<th>هاتف</th>
                    <th>تلفون</th>
                    <th>عنوان</th>
                    <th>بريد_الكتروني</th>
                    <th>المدينة</th>*@
                <th>المحافظة</th>
                <th>دولة</th>
                <th>الاسم</th>
                @*<th>معرف</th>*@
                <th>رقم_الوكيل</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr class=" text-light">
                    <td>
                        <a class="text-light btn-danger btn form-control" href="@Url.Action("Delete", "Customers",new { id = @item.رقم_الوكيل, add_id = @item.معرف})">
                            <span>
                                <i class="fas fa-user-times"></i>
                            </span>
                            حذف
                        </a>
                    </td>
                    <td>
                        <a class="text-light btn-warning btn form-control" href="@Url.Action("Edit", "Customers",new { id = @item.رقم_الوكيل, add_id = @item.معرف})">
                            <span>
                                <i class="fas fa-user-edit"></i>
                            </span>
                            تعديل
                        </a>
                    </td>
                    <td>
                        <a class="text-light btn-primary btn form-control" href="@Url.Action("Details", "Customers",new { id = @item.رقم_الوكيل, add_id = @item.معرف})">
                            <span>
                                <i class="fas fa-user-edit"></i>
                            </span>
                            بيانات
                        </a>
                    </td>
                    @*<td>  @item.فاكس</td>
                        <td>  @item.هاتف</td>
                        <td>  @item.تلفون</td>
                        <td>  @item.عنوان</td>
                        <td>  @item.بريد_الكتروني</td>
                        <td>  @item.المدينة</td>*@
                    <td>  @item.المحافظة</td>
                    <td>  @item.دولة</td>
                    <td>  @item.الاسم</td>
                    @*<td>  @item.معرف</td>*@
                    <td>  @item.رقم_الوكيل</td>

                </tr>
            }
        </table>





    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>