@model project_3.Models.SP_Store_ID_Result

@{
    ViewBag.Title = "Edit";
}

    <div class="page-container">

        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                تعديل مخزن
            </h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.store_id)

            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-5">
                    @Html.EditorFor(model => model.storeName, new { htmlAttributes = new { @class = "col-md-9 form-control" } })
                    @Html.ValidationMessageFor(model => model.storeName, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم المخزن
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-5">
                    @Html.EditorFor(model => model.storeAdminName, new { htmlAttributes = new { @class = "col-md-9 form-control" } })
                    @Html.ValidationMessageFor(model => model.storeAdminName, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم مدير المخزن
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-5">
                    @Html.EditorFor(model => model.storeLocation, new { htmlAttributes = new { @class = "col-md-9 form-control" } })
                    @Html.ValidationMessageFor(model => model.storeLocation, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        مكان المخزن 
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>



            <div class="d-flex flex-row-reverse ml-0">
                <div class=" col-md-1">
                </div>
                <div class=" col-md-2">
                    <button type="submit" class="col-md-11 text-light btn-success btn form-control">
                        <span><i class="fas fa-user-plus fa-lg"></i></span>
                        &nbsp;&nbsp;&nbsp;
                        تعديل
                    </button>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index","stores")" class="col-md-11 text-light btn-primary btn form-control">
                        <i class="fas fa-undo"></i>
                        &nbsp;&nbsp;&nbsp;
                        رجوع للقائمه
                    </a>
                </div>
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
