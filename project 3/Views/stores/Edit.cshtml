@model project_3.SP_Store_ID_Result

@{
    ViewBag.Title = "Edit";
}

    <div class="page-container">

        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                تعديل متجر
            </h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.store_id)

            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.storeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.storeName, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم المتجر
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.storeAdminName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.storeAdminName, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم مدير المتجر
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.storeLocation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.storeLocation, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        مكان المتجر 
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>



            <div class="d-flex flex-row-reverse col-md-11">
                <div class="col-md-5">

                </div>

                <div class=" col-md-2">
                    <input type="submit" value="حفظ" class="text-light btn-success btn form-control">
                </div>



                <div class="col-md-2 ">
                    @Html.ActionLink("رجوع", "Index", null, new { @class = "text-light btn-danger btn form-control" })

                </div>


            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
