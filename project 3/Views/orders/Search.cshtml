@model IEnumerable<project_3.Models.SP_Order_Search_Result>

@{
    ViewBag.Title = "index";
}


@if (TempData["Msg"] != null)
{
    <div id="msg" style="text-align:center; background-color:lightgreen" class="col-md-5  rounded offset-3 p-2 text-success">
        <div class="col-md-3">

        </div>
        <h3>
            @TempData["Msg"]
        </h3>
    </div>
}



@using (Html.BeginForm("Search", "orders", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="page-container mb-5">
        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                 الطلبيات
            </h1>
        </div>
        <div class="d-flex flex-row-reverse mr-2">
            <h1 class="text-light">
                بحث
            </h1>
            <div class="col-md-2">
                <input type="text" class="form-control" name="Key" value="@TempData["SearchKey"]" />
            </div>
            <div>
                <input type="submit" value="<<" class="bg-primary text-dark form-control">

            </div>
          
            <div class="mr-auto">
                <a class="btn btn-success form-control text-light" href="@Url.Action("Create", "orders")">
                    <i class="fas fa-user-plus fa-lg"></i>
                    &nbsp;&nbsp;&nbsp;
                    اضافة طلبيه جديده
                </a>
            </div>
        </div>



        <table class="text-center table table-hover border-bottom border-light border-5">
            <tr class=" text-light">
                <th>حذف</th>
                <th>تعديل</th>
                @*<th>فاكس</th>
                    <th>هاتف</th>
                    <th>تلفون</th>
                    <th>عنوان</th>*@
                <th>ملاحظه</th>
                <th>المخزن</th>
                <th>رقم المخزن</th>
                <th>التاريخ</th>
                <th>اسم الوكيل</th>
                <th>رقم الوكيل</th>
                <th>رقم الطلبيه</th>

            </tr>
            @foreach (var item in Model)
            {
        <tr class=" text-light">
            <td>
                <a class=" text-light btn-danger btn form-control" href="@Url.Action("Delete", "orders",new { id = @item.رقم_الطلبية})">
                    <span>
                        <i class="fas fa-user-times"></i>
                    </span>
                    حذف
                </a>

            </td>
            <td>

                <a class=" text-light btn-warning btn form-control" href="@Url.Action("Edit", "orders",new { id = @item.رقم_الطلبية})">
                    <span>
                        <i class="fas fa-user-edit"></i>
                    </span>
                    تعديل
                </a>
            </td>
            @*<td>  @item.فاكس</td>
        <td>  @item.هاتف</td>
        <td>  @item.تلفون</td>
        <td>  @item.عنوان</td>*@
            <td>  @item.ملاحظة</td>
            <td>  @item.المخزن</td>
            <td>  @item.رقم_المخزن</td>
            <td>  @item.التاريخ</td>
            <td>  @item.اسم_الوكيل</td>
            <td>  @item.رقم_الوكيل</td>
            <td>  @item.رقم_الطلبية</td>

        </tr>
            }
        </table>





    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>
