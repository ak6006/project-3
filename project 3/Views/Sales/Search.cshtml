@model SP_Sales_BarCode_Check_Result

@{
    ViewBag.Title = "Index";
}


    <div class="page-container">


        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2 ">
            <h1 class="text-light">
                عرض بيانات الشكارة حسب الباركود
            </h1>
        </div>



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex flex-row-reverse mb-2 justify-content-center">
                <div class="d-flex col-md-4">
                    <input id="SerialTextBox" name="Key" class="form-control" />
                    <span class="col-md-4 text-light">

                    </span>
                </div>

            </div>

            <div class="d-flex flex-row-reverse mb-2 justify-content-center">
                <div class="d-flex col-md-4">
                    <button hidden type="submit" class="text-light btn-success btn form-control">
                        <span><i class="fas fa-user-plus fa-lg"></i></span>
                        &nbsp;&nbsp;&nbsp;
                        تحميل
                    </button>
                    <span class="col-md-4 text-light">
                    </span>
                </div>
            </div>
        }
        @if (TempData["Msg"] != null)
        {


            <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
                <div class="col-md-3">

                </div>
                <h3>
                    @TempData["Msg"]
                </h3>
            </div>


        }

        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                <input disabled type="text" class="form-control" value="@Model.store_store_id" id="" />

                <span class="col-md-4 text-light">
                    رقم المخزن
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.store_has_productDate" id="" />
                <span class="col-md-4 text-light">
                    تاريخ الانتاج
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.shiftName" id="" />
                <span class="col-md-4 text-light">
                    الورديه
                </span>
            </div>
        </div>
        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                <input disabled type="text" class="form-control" value="@Model.Shift_Name" id="" />

                <span class="col-md-4 text-light">
                    مدير الورديه
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.Customer_Name" id="" />
                <span class="col-md-4 text-light">
                    الوكيل
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.transVehcile_num" id="" />
                <span class="col-md-4 text-light">
                    رقم العربيه
                </span>
            </div>
        </div>
        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                <input disabled type="text" class="form-control" value="@Model.transVehcile_driver_name" id="" />

                <span class="col-md-4 text-light">
                    سائق العربيه
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.date" id="" />
                <span class="col-md-4 text-light">
                    تاريخ البيع
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.productName" id="" />
                <span class="col-md-4 text-light">
                    المنتج
                </span>
            </div>
        </div>
        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                <input disabled type="text" class="form-control" value="@Model.weight_net" id="" />

                <span class="col-md-4 text-light">
                    الوزن
                </span>
            </div>
            <div class="d-flex col-md-4">
                <input disabled class="form-control" value="@Model.barcode_serialNumber" id="" />
                <span class="col-md-4 text-light">
                    السريال
                </span>
            </div>
            
        </div>


