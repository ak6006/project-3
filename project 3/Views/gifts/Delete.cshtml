@model project_3.Models.gift

@{
    ViewBag.Title = "Delete";
}


<div class="page-container">
    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 class="text-light">
            حذف وحدة قياس
        </h1>
    </div>
    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h3 class="text-light">
            هل انت متأكد انك تريد الحذف نهائيا
        </h3>
    </div>

    <div class=" mb-5 mt-2 mr-2 text-light">

        <hr />

        <div class="d-flex flex-row-reverse">

            <div class="col-md-2 d-flex flex-row-reverse">
                <b>اسم الجائزة</b>
            </div>

            <div class="col-md-2 d-flex flex-row-reverse">
                @Html.DisplayFor(model => model.giftname)
            </div>
        </div>
        <div class="d-flex flex-row-reverse">

            <div class="col-md-2 d-flex flex-row-reverse">
                <b>عدد شكاير الجائزة</b>
            </div>

            <div class="col-md-2 d-flex flex-row-reverse">
                @Html.DisplayFor(model => model.giftBagsCount)
            </div>
        </div>
        <div class="d-flex flex-row-reverse">

            <div class="col-md-2 d-flex flex-row-reverse">
                <b>الصورة</b>
            </div>

            <div class="col-md-2 d-flex flex-row-reverse">
                <img style="max-height:100px; width:50px;" src="data:image/*;base64,@(Convert.ToBase64String(Model.giftimg))" class="img-fluid" />
            </div>
        </div>





        <br />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color d-flex flex-row-reverse">
                <button type="submit" class="col-md-2 btn btn-danger">
                    <i class="fas fa-user-times"></i>
                    &nbsp;&nbsp;&nbsp;
                    حذف
                </button>
                &nbsp; | &nbsp;
                @*@Html.ActionLink("رجوع للقائمه", "Index", null, new { @class = "col-md-2 btn btn-primary" })*@
                <a href="@Url.Action("Index","gifts")" class="col-md-2 text-light btn-primary btn form-control">
                    <i class="fas fa-undo"></i>
                    &nbsp;&nbsp;&nbsp;
                    رجوع للقائمه
                </a>
            </div>
        }
    </div>

</div>




