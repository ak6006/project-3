@model project_3.SP_Trans_Vin_ID_Result

@{
    ViewBag.Title = "Edit";
}

    <div class="page-container">

        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                تعديل عربية 
            </h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.الرقم)

            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.اسم_السائق, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.اسم_السائق, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم السائق
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.رقم_العربية, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.رقم_العربية, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        رقم العربية
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.الموديل, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.الموديل, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        الموديل
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.سريال_العربية, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.سريال_العربية, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        سريال العربية
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.هاتف, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.هاتف, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        الهاتف
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.العنوان, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.العنوان, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        العنوان
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.DropDownListFor(m => m.رقم_الوكيل, ViewBag.customers_Customers_id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.رقم_الوكيل, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        الوكيل
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse col-md-11">
                <div class="col-md-5">

                </div>

                <div class=" col-md-2">
                    <input type="submit" value="حفظ" class="text-light btn-success btn form-control">
                </div>



                <div class="col-md-2 ">
                    @Html.ActionLink("رجوع", "Index", null, new { @class = "text-light btn-danger btn form-control" })

                </div>


            </div>
        }

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
