@model IEnumerable<project_3.SP_TRANS_VIN_Search_Result>

@{
    ViewBag.Title = "index";
}

@if (TempData["Msg"] != null)
{
    <div id="msg" style="text-align:center; background-color:lightgreen" class="col-md-5  rounded offset-3 p-2 text-success">
        <div class="col-md-3">

        </div>
        <h3>
            @TempData["Msg"]
        </h3>
    </div>
}



@using (Html.BeginForm("Search", "transvehciles", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="page-container mb-5">
    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 class="text-light">
            بيانات عربيات النقل
        </h1>
    </div>
    <div class="d-flex flex-row-reverse mr-2">
        <h1 class="text-light">
            بحث
        </h1>
        <div class="col-md-2">
            <input type="text" class="form-control" name="Key" value="@TempData["SearchKey"]" />
        </div>
        <div>
            <input type="submit" value="<<" class="bg-primary text-dark form-control">

        </div>

        <div class=" mr-auto">
            @*@Html.ActionLink("اضافة عربيه جديدة ", "Create", null, new { @class = "text-light btn-success btn form-control" })*@
            <a class="btn btn-success form-control text-light" href="@Url.Action("Create", "transvehciles")">
                <span><i class="fas fa-user-plus fa-lg"></i></span>
                &nbsp;&nbsp;&nbsp;
                اضافة عربيه جديدة
            </a>
        </div>
    </div>



    <table class="text-center table table-hover border-bottom border-light border-5">
        <tr class=" text-light">
            <th>حذف</th>
            <th>تعديل</th>
            <th>بيانات</th>
            <th>اسم الوكيل</th>
            <th>رقم العربيه</th>
            <th>اسم السائق</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr class=" text-light">
                <td>
                    <a class="col-md-9 text-light btn-danger btn form-control" href="@Url.Action("Delete", "transvehciles",new { id = @item.الرقم})">
                        <span>
                            <i class="fas fa-user-times"></i>
                        </span>
                        حذف
                    </a>
                </td>
                <td>
                    <a class="col-md-9 text-light btn-warning btn form-control" href="@Url.Action("Edit", "transvehciles",new { id = @item.الرقم})">
                        <span>
                            <i class="fas fa-user-edit"></i>
                        </span>
                        تعديل
                    </a>
                </td>
                <td>
                    <a class="col-md-9 text-light btn-primary btn form-control" href="@Url.Action("Details", "transvehciles",new { id = @item.الرقم})">
                        <span>
                            <i class="fas fa-user-edit"></i>
                        </span>
                        بيانات
                    </a>
                </td>
                <td>  @item.اسم_الوكيل</td>
                <td>  @item.رقم_العربية</td>
                <td>  @item.اسم_السائق</td>

            </tr>
        }
    </table>





</div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>
