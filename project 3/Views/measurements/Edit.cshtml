@model project_3.SP_Measurement_ID_Result

@{
    ViewBag.Title = "Edit";
}

    <div class="page-container">

        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                تعديل وحدة قياس
            </h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.رقم_الوحدة)

            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-5">
                    @Html.EditorFor(model => model.اسم_وحدة_القياس, new { htmlAttributes = new { @class = "col-md-9 form-control" } })
                    @Html.ValidationMessageFor(model => model.اسم_وحدة_القياس, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        اسم وحدة القياس
                    </span>
                </div>

                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-5">
                    <input required type="number" class="col-md-9 form-control" value="@Model.measurement_Count_per_unit" name="measurement_Count_per_unit" id="" />

                    <span class="col-md-3 text-light">
                        وزن الوحدة بالكيلو
                    </span>
                </div>

            </div>



            <div class="d-flex flex-row-reverse ">
                <div class="col-md-1">

                </div>

                <div class=" col-md-2">
                    <button type="submit" class="col-md-11 text-light btn-success btn form-control">
                        <span><i class="fas fa-user-plus fa-lg"></i></span>
                        &nbsp;&nbsp;&nbsp;
                        تعديل
                    </button>
                </div>



                <div class="col-md-2 ">
                    <a href="@Url.Action("Index","measurements")" class="col-md-11 text-light btn-primary btn form-control">
                        <i class="fas fa-undo"></i>
                        &nbsp;&nbsp;&nbsp;
                        رجوع للقائمه
                    </a>
                </div>


            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
