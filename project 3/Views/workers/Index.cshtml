@model IEnumerable<project_3.Models.SP_Workers_To_DataGrid_Result>

@{
    ViewBag.Title = "Index";
}


@if (TempData["Msg"] != null)
{
    <div id="msg" style="text-align:center; background-color:lightgreen" class="col-md-5  rounded offset-3 p-2 text-success">
        <div class="col-md-3">

        </div>
        <h3>
            @TempData["Msg"]
        </h3>
    </div>
}



@using (Html.BeginForm("Search", "workers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="page-container mb-5">
        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 style='font-family:"BeInNormal"' class="text-light ">
                بيانات العمال
            </h1>
        </div>
        <div class="d-flex flex-row-reverse mr-2">
            <h1 class="text-light">
                بحث
            </h1>
            <div class="col-md-2">
                <input type="text" class="form-control" name="Key" />
            </div>
            <div>
                <input type="submit" value="<<" class="bg-primary text-dark form-control">

            </div>
            
            <div class=" mr-auto">
                <a class="btn btn-success form-control text-light" href="@Url.Action("Create", "workers")">
                    <span><i class="fas fa-user-plus fa-lg"></i></span>
                    &nbsp;&nbsp;&nbsp;
                    اضافة عامل جديد
                </a>
            </div>
        </div>



        <table class="text-center table table-hover border-bottom border-light border-5">
            <tr class=" text-light">
                <th>حذف</th>
                <th>تعديل</th>
                <th>بيانات</th>
                <th></th>
                <th></th>
                <th></th>
                <th>الاسم</th>
            
                <th>رقم العامل</th>

            </tr>
            @foreach (var item in Model)
            {
        <tr class=" text-light">
            <td>
                <a class="text-light btn-danger btn form-control" href="@Url.Action("Delete", "workers",new { id = @item.رقم_العامل, add_id = @item.معرف})">
                    <span>
                        <i class="fas fa-user-times"></i>
                    </span>
                    حذف
                </a>
            </td>
            <td>
                <a class="text-light btn-warning btn form-control" href="@Url.Action("Edit", "workers",new { id = @item.رقم_العامل, add_id = @item.معرف})">
                    <span>
                        <i class="fas fa-user-edit"></i>
                    </span>
                    تعديل
                </a>
            </td>
            <td>
                <a class="text-light btn-primary btn form-control" href="@Url.Action("Details", "workers",new { id = @item.رقم_العامل, add_id = @item.معرف})">
                    <span>
                        <i class="fas fa-user-edit"></i>
                    </span>
                    بيانات
                </a>
            </td>
            <td></td>
            <td></td>
            <td></td>
          
            <td>  @item.الاسم</td>
        
            <td>  @item.رقم_العامل</td>

        </tr>
            }
        </table>





    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>