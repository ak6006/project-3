@model project_3.Models.SP_Worker_ID_Result

@{
    ViewBag.Title = "Edit";
}
    <div class="page-container">

        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                تعديل  عامل
            </h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.رقم_العامل)

            @Html.HiddenFor(model => model.معرف, new { htmlAttributes = new { @class = "form-control" } })
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.الاسم, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.الاسم, "", new { @class = "text-danger" })

                    <span class="col-md-4 text-light">
                        الاسم
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.بريد_الكتروني, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.بريد_الكتروني, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        بريد الكترونى
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.دولة, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.دولة, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        دولة
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.المدينة, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.المدينة, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        المدينة
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.المحافظة, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.المحافظة, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        المحافظه
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.عنوان, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.عنوان, "", new { @class = "text-danger" })            <span class="col-md-4 text-light">
                        العنوان
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.تلفون, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.تلفون, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        تليفون
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.EditorFor(model => model.فاكس, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.فاكس, "", new { @class = "text-danger" })
                    <span class="col-md-4 text-light">
                        فاكس
                    </span>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="d-flex flex-row-reverse ">
                <div class=" col-md-4 ">
                    <button type="submit" class="col-md-8 text-light btn-success btn form-control">
                        <i class="fas fa-user-times"></i>
                        &nbsp;&nbsp;&nbsp;
                        تعديل
                    </button>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("Index","workers")" class="col-md-8 text-light btn-primary btn form-control">
                        <i class="fas fa-undo"></i>
                        &nbsp;&nbsp;&nbsp;
                        رجوع للقائمه
                    </a>
                </div>
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
