@model project_3.Models.RegisterViewModel

@{
    ViewBag.Title = "Create";
}
<div class="page-container">
    @if (TempData["Msg"] != null)
    {
        <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
            <div class="col-md-3">

            </div>
            <h3>
                @TempData["Msg"]
            </h3>
        </div>
    }
    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 class="text-light">
            اضافة مستخدم جديد
        </h1>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="d-flex flex-row-reverse mb-2">
    <div class="d-flex col-md-4">
        <input required type="text" class="form-control" name="UserName" id="" />

        <span class="col-md-4 text-light">
            الاسم
        </span>
    </div>
    <div class="d-flex col-md-4">
        <input required type="password" class="form-control" name="Password" id="" />

        <span class="col-md-4 text-light">
            كلمة المرور
        </span>
    </div>
</div>
<div class="d-flex flex-row-reverse mb-2">
    <div class="d-flex col-md-4">
        <input required type="text" class="form-control" name="Phone" id="" />

        <span class="col-md-4 text-light">
            الهاتف
        </span>
    </div>
    <div class="d-flex col-md-4">
        <input required type="password" class="form-control" name="ConfirmPassword" id="" />

        <span class="col-md-4 text-light">
            تاكيد  كلمة المرور
        </span>
    </div>
</div>

        <div class="d-flex flex-row-reverse mb-2">
            

        </div>
        <div class="d-flex flex-row-reverse mb-2">
          

        </div>

        <div class="d-flex flex-row-reverse ml-0">
            <div class="col-md-1">

            </div>
            <div class=" col-md-3 ">
                <button type="submit" class="col-md-11 text-light btn-success btn form-control">
                    <span><i class="fas fa-user-plus fa-lg"></i></span>
                    &nbsp;&nbsp;&nbsp;
                    اضافه
                </button>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("Index","User")" class="col-md-11 text-light btn-primary btn form-control">
                    <i class="fas fa-undo"></i>
                    &nbsp;&nbsp;&nbsp;
                    رجوع للقائمه
                </a>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>