@model project_3.Models.ProductViewModel

@{
    ViewBag.Title = "Create";
}
<div class="page-container">
    @if (TempData["Msg"] != null)
    {


        <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
            <div class="col-md-3">

            </div>
            <h3>
                @TempData["Msg"]
            </h3>
        </div>


    }

    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 class="text-light">
            اضافة منتج جديد
        </h1>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-5">
                <input required type="text" class="col-md-9 form-control" name="اسم_المنتج" id="" />

                <span class="col-md-3 text-light">
                    اسم المنتج
                </span>
            </div>
            
        </div>
       
        
       
        <div class="d-flex flex-row-reverse ml-0">
            <div class=" col-md-1">
            </div>
                <div class=" col-md-2">
                    <button type="submit" class="col-md-11 text-light btn-success btn form-control">
                        <span><i class="fas fa-user-plus fa-lg"></i></span>
                        &nbsp;&nbsp;&nbsp;
                        اضافه
                    </button>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index","products")" class="col-md-11 text-light btn-primary btn form-control">
                        <i class="fas fa-undo"></i>
                        &nbsp;&nbsp;&nbsp;
                        رجوع للقائمه
                    </a>
                </div>
        </div>
            }
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>