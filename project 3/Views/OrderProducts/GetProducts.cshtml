@model IEnumerable<SP_Order_Items_To_DataGrid_Result>

@{
    ViewBag.Title = "index";
    Layout = null;
}

    <div class="mb-5">
        
            <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
                <h1 style='font-family:"BeInNormal"' class="text-light ">
                    بيانات الطلبيه
                </h1>
            </div>
            <div class="d-flex flex-row-reverse mr-2">

                <h1 class="text-light">
                </h1>
                <div class="col-md-2">
                </div>
                <div>
                </div>
                <div class="col-md-7">

                </div>
                <div class="col-md-3">
                    @using (Html.BeginForm("Create1", "OrderProducts", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="text" hidden name="CustomerName" value="@ViewBag.CustomerName" />
                        <input type="text" hidden name="ThisOrderId" value="@ViewBag.OrderId" />
                        <button type="submit" class="col-md-5 text-light btn-success btn form-control">
                            <span><i class="fas fa-user-plus fa-lg"></i></span>
                            &nbsp;&nbsp;&nbsp;
                            اضافه
                        </button>
                            
                        
                        @*@Html.ActionLink("اضافة طلبيه جديده ", "Create", null, new { @class = "text-light btn-success btn form-control" })*@
                    }
                </div>

            </div>



            <table class="table  border-bottom border-light border-5">
                <tr class=" text-light">
                    <th>حذف</th>
                    <th>تعديل</th>
                    <th>عدد الشكاير المتبقيه</th>
                    <th>عدد شكاير الطلبيه</th>
                    <th>الوزن</th>
                    <th>الكمية</th>
                    <th> وحدة القياس</th>
                    <th>اسم المنتج</th>
                    <th> التاريخ</th>
                    <th>اسم الوكيل</th>
                    <th>رقم الطلبيه</th>

                </tr>
                @foreach (var item in Model)
                {
            <tr class=" text-light">
                <td>
                    <a class="text-light btn-danger btn form-control" href="@Url.Action("Delete", "OrderProducts",new { OId = @item.رقم_الطلبية ,PId = item.product_id, MId=item.measure_id ,WId = item.weight_id , CName = item.اسم_العميل})">
                        <i class="fas fa-user-times"></i>
                        حذف
                    </a>
                </td>
                <td>
                    <a class="text-light btn-warning btn form-control" href="@Url.Action("Edit", "OrderProducts",new { OId = @item.رقم_الطلبية ,PId = item.product_id, MId=item.measure_id ,WId = item.weight_id , CName = item.اسم_العميل})">
                        <i class="fas fa-user-edit"></i>
                        تعديل
                    </a>
                </td>
                <td>@item.order_has_product_dept_count</td>
                <td>@item.order_has_product_Pages_Count</td>
                <td>@item.الوزن</td>
                <td>@item.الكمية</td>
                <td>@item.وحدة_القياس</td>
                <td>@item.اسم_المنتج</td>
                <td>@item.التاريخ</td>
                <td>@item.اسم_العميل</td>
                <input type="text" hidden name="CustomerName" value="@item.اسم_العميل" />
                <td>@item.رقم_الطلبية</td>
            </tr>
                }

            </table>
        
    </div>



