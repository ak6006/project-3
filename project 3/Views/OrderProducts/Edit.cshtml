@model SP_Order_Items_ID_Result

@{
    ViewBag.Title = "Edit";
}
    <div class="page-container">
        @if (TempData["Msg"] != null)
        {
            <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
                <div class="col-md-3">
                </div>
                <h3>
                    @TempData["Msg"]
                </h3>
            </div>
        }
        <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
            <h1 class="text-light">
                اضافة طلبية جديدة
            </h1>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.HiddenFor(m => m.رقم_الطلبية, new { @Value = ViewBag.ThisOrderId })
                    <input value="@ViewBag.ThisOrderId" disabled class="form-control" />
                    <span class="col-md-4 text-light">
                        رقم الطلبية
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.DropDownListFor(m => m.product_id, ViewBag.Products_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                    <span class="col-md-4 text-light">
                        اسم المنتج
                    </span>
                </div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    <input value="@ViewBag.CustomerName" name="اسم_العميل" disabled class="form-control" />
                    <span class="col-md-4 text-light">
                        اسم الوكيل
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    @Html.DropDownListFor(m => m.measure_id, ViewBag.Measurements_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                    <span class="col-md-4 text-light">
                        وحدة القياس
                    </span>
                </div>
            </div>
            <div class="d-flex flex-row-reverse mb-2">
                <div class="d-flex col-md-4">
                    @Html.DropDownListFor(m => m.weight_id, ViewBag.Weights_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                    <span class="col-md-4 text-light">
                        الوزن
                    </span>
                </div>
                <div class="d-flex col-md-4">
                    <input type="number" name="الكمية" value="@Model.الكمية" class="form-control" />
                    <span class="col-md-4 text-light">
                        الكمية
                    </span>
                </div>
            </div>
            <div class="d-flex flex-row-reverse">
                <div class="d-flex col-md-4">
                    <button type="submit" class="text-light btn-success btn form-control">
                        <i class="fas fa-user-edit"></i>
                        تعديل
                    </button>
                    <span class="col-md-4">

                    </span>
                </div>
                <div class="d-flex col-md-4 ">
                    <a href="@Url.Action("Index","orderProducts")" class="text-light btn-primary btn form-control">
                        <i class="fas fa-undo"></i>
                        &nbsp;&nbsp;&nbsp;
                        رجوع للقائمه
                    </a>
                    <span class="col-md-4">

                    </span>
                </div>
                <div class="col-md-2 ">
                </div>
            </div>
        }
    </div>