@model project_3.Models.SP_Order_Trans_Vin_To_DataGrid_Result

@{
    ViewBag.Title = "Create";
}


<div class="page-container">
    @if (TempData["Msg"] != null)
    {


        <div id="msg" style="text-align:center; background-color:lightcoral" class="col-md-5  rounded offset-3 p-2 text-danger">
            <div class="col-md-3">

            </div>
            <h3>
                @TempData["Msg"]
            </h3>
        </div>


    }

    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 class="text-light">
            اضافة عربيات طلبيات
        </h1>
    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                @*@Html.HiddenFor(m => m.رقم_الطلبية, new { @Value = ViewBag.ThisOrderId })
        <input value="@Model.رقم_الطلبية" disabled class="form-control" />*@
                @Html.HiddenFor(m => m.رقم_الطلبية, new { @Value = ViewBag.ThisOrderId })
                <input value="@ViewBag.ThisOrderId" disabled class="form-control" />
                <span class="col-md-4 text-light">
                    رقم الطلبية
                </span>
            </div>
            <div class="d-flex col-md-4">
                @Html.DropDownListFor(m => m.v_id, ViewBag.Trans_Id as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                <span class="col-md-4 text-light">
                     سائق العربيه
                </span>
            </div>
        </div>
       
       
        <div class="d-flex flex-row-reverse mb-2">
            <div class="d-flex col-md-4">
                <button type="submit" class="text-light btn-success btn form-control">
                    <span><i class="fas fa-user-plus fa-lg"></i></span>
                    &nbsp;&nbsp;&nbsp;
                    اضافه
                </button>
                <span class="col-md-4 text-light">

                </span>
            </div>
            <div class="d-flex col-md-4">
                <a href="@Url.Action("Index","orderTrans")" class="text-light btn-primary btn form-control">
                    <i class="fas fa-undo"></i>
                    &nbsp;&nbsp;&nbsp;
                    رجوع للقائمه
                </a>
                <span class="col-md-4">

                </span>
            </div>
            <div class="col-md-2 ">
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    setTimeout(function () {
        $('#msg').remove();
    }, 5000);
</script>
