                <i class="fas fa-user-times"></i>
                حذف
            </a>
        </td>
        @*<td>
            <a class="text-light btn-warning btn form-control" href="@Url.Action("Edit", "OrderTrans",new { OId = @item.رقم_الطلبية, VId = item.v_id })">
                <i class="fas fa-user-edit"></i>
                تعديل
            </a>
        </td>*@
        <td></td>
        <td></td>
        <td>@item.التاريخ</td>
        <td>@item.رقم_العربية</td>
        <td>@item.اسم_السائق</td>
        <input type="text" hidden name="CustomerName" value="@item.اسم_الوكيل" />
        <td>@item.اسم_الوكيل</td>
