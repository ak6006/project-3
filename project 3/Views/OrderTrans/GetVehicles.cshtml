@model IEnumerable<SP_Order_Trans_Vin_To_DataGrid_Result>

@{
    ViewBag.Title = "index";
    Layout = null;
}

<div class="mb-5">

    <div class="d-flex flex-row-reverse mb-5 mt-2 mr-2">
        <h1 style='font-family:"BeInNormal"' class="text-light ">
            بيانات عربيات النقل
        </h1>
    </div>
    <div class="d-flex flex-row-reverse mr-2">

        <h1 class="text-light">
        </h1>
        <div class="col-md-2">
        </div>
        <div>
        </div>
      
        <div class="mr-auto">
            @using (Html.BeginForm("Create1", "OrderTrans", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
